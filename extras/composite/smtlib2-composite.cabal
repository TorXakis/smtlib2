Library
  Build-Depends: smtlib2 >= 1.0 && < 1.1, base, dependent-sum, dependent-map, mtl, containers, template-haskell
  Exposed-Modules:
                  Language.SMTLib2.Composite
                  Language.SMTLib2.Composite.Class
                  Language.SMTLib2.Composite.Expression
                  Language.SMTLib2.Composite.Null
                  Language.SMTLib2.Composite.Singleton
                  Language.SMTLib2.Composite.List
                  Language.SMTLib2.Composite.Maybe
